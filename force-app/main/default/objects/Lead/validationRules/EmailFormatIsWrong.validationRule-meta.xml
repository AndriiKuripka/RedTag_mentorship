<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>EmailFormatIsWrong</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX( Email,&apos;([a-zA-Z0-9_\\-\\.]+)@domail.com&apos;))</errorConditionFormula>
    <errorDisplayField>Email</errorDisplayField>
    <errorMessage>Enter another Email adress, format should be - example@domail.com</errorMessage>
</ValidationRule>
